@model OnlineMobileStore.Models.Company

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Company</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>
                        <a class="a-cleanup" asp-controller="Company" asp-action="Details" asp-route-id="@Model.Id">@Model.Id</a>
                    </td>

                    <td>
                        <a class="a-cleanup" asp-controller="Company" asp-action="Details" asp-route-id="@Model.Id"> <img src="@Model.Image" style="height: 4em"> </a>
                    </td>

                    <td>
                        <a class="a-cleanup" asp-controller="Company" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-main mt-20">Back to List</a>
    </form>
</div>
