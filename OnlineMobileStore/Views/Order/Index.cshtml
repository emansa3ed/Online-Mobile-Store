@model IEnumerable<OnlineMobileStore.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Adjust the column size to center the search form -->
            <div class="card">
                <div class="card-body">
                    <form method="get" action="@Url.Action("Order_Search", "Order")" class="form-inline justify-content-center">
                        <!-- Add justify-content-center class to center the form -->
                        <div class="input-group">
                            <input type="search" class="form-control" name="search_word" placeholder="Search..." aria-label="Search">
                        
                                <button class="btn btn-main" type="submit" style="background:green; color:white">Search</button>
                           
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalItems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalItems)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-main mt-20">View Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>




