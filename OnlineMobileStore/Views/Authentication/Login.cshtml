@model OnlineMobileStore.Models.User
@{
    ViewData["Title"] = "Login";
}
    <section class="signin-page account">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="block text-center">
                        <a class="logo" href="index.html">
                            <img src="images/logo.png" alt="">
                        </a>
                        <h2 class="text-center">Welcome Back</h2>
                    <form class="text-left clearfix" method="POST" asp-action="Login">
                            <div class="form-group">
                                <label>User Name</label>
                            <input  class="form-control" name="UserName" asp-for="@Model.UserName" placeholder="UserName"  minlength="3">
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                            <label>Password</label>
                            <input  class="form-control" name="Password" asp-for="@Model.Password" placeholder="Password"  minlength="4">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-main text-center">Login</button>
                            </div>
                        <label class="alert-danger">@ViewData["Error"]</label>
                        </form>
                        <p class="mt-20">New in this site ?<a asp-controller="Authentication" asp-action="Register"> Create New Account</a></p>

                    </div>
                </div>
            </div>
        </div>
    </section>

